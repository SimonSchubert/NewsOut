<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   android:orientation="vertical"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content" android:paddingLeft="16dp"
                                                   android:paddingRight="16dp"
                                                   android:paddingTop="16dp" android:paddingBottom="16dp">

    <TextView
            android:layout_width="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_height="wrap_content" android:id="@+id/textView01"
            android:text="This software is open source. You need to have the official news app installed on your Nextcloud instance and log into this app with your Nextcloud credentials."/>
    <Button
            android:text="Rate"
            android:layout_marginTop="8dp"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/textView01"
            android:layout_height="wrap_content" android:id="@+id/btnRate"
            android:drawableLeft="@drawable/ic_icons8_star" android:drawablePadding="8dp"/>
    <Button
            android:text="View source"
            android:layout_width="wrap_content"
            app:layout_constraintLeft_toRightOf="@id/btnRate"
            app:layout_constraintTop_toTopOf="@id/btnRate"
            android:layout_height="wrap_content" android:id="@+id/btnGithub"
            android:drawableLeft="@drawable/ic_icons8_github" android:drawablePadding="8dp"/>
    <TextView
            android:text="You don't have a Nextcloud account, yet?"
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/btnRate"
            android:layout_height="wrap_content" android:id="@+id/textView02" android:textSize="18sp"
            android:layout_marginTop="16dp"/>
    <TextView
            android:text="Nextcloud is a suite of client-server software for creating and using file hosting services. Nextcloud application functionally is similar to Dropbox."
            android:layout_width="match_parent"
            app:layout_constraintTop_toBottomOf="@id/textView02"
            android:layout_height="wrap_content" android:id="@+id/textView4"/>
    <Button
            android:text="Compare services"
            android:layout_width="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/textView4"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_height="wrap_content" android:id="@+id/btnCompare"
            android:layout_marginTop="8dp"
            android:drawableLeft="@drawable/ic_icons8_scales" android:drawablePadding="8dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>