<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="16dp">

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                  android:orientation="horizontal"
                  android:layout_marginLeft="16dp"
                  android:layout_marginRight="16dp">

        <TextView
                android:text="Sorting"
                android:textSize="16sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView"/>

        <Spinner
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:id="@+id/sortingSp"/>

    </LinearLayout>


    <Switch
            android:text="Folders always top"
            android:textSize="16sp"
            android:textColor="@color/grey"
            android:layout_marginTop="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/folderSw"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"/>

    <Button
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:text="Logout"
            android:textColor="@color/red"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/logoutBtn" android:layout_marginTop="24dp"/>
</LinearLayout>